defshell -$SHELL
termcapinfo xterm* ti@:te@ #allow buffer scroll with mousewheel
startup_message off
defscrollback 5000
backtick 9 90 90 hostname -I
defutf8 on
altscreen on
defmonitor on
activity 'Activity in window %n'
caption always
hardstatus alwayslastline
# window list, time
caption string '%{= kg}[%{= kw}%-w%n*%t%+w%=%{g}][%{+b b}%m/%d %C%a%{g}]'
# backtick output
hardstatus string '%{= kg}[%{+b b}%?%9`%?%= %{g}]'
deflog on
logfile $HOME/logs/%m%d-%c-%t%n.screenlog
logfile flush 5
logtstamp on
logtstamp after 300
